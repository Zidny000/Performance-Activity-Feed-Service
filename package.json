{
  "name": "activity-feed-service",
  "version": "1.0.0",
  "description": "Read-heavy, filterable, paginated feed (e.g., product list, activity feed)",
  "main": "server.ts",
  "scripts": {
    "start": "node src/server.ts",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "jest",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate -d src/config/dataSource.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/config/dataSource.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/dataSource.ts"
  },
  "author": "Zidny Talukdar",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mysql2": "^3.11.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "eslint": "^9.9.0",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}